    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate TypeScript SDK",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["tsp", "compile", "--config", "./tspconfig.yaml", "."],
            "runtimeExecutable": "npx",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "outFiles": ["${workspaceFolder}/packages/*/dist/**/*.js"]
          }
    ]
}
